<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>
<mapper namespace="top.sjydzq.www.service.ProductService">
    <select id="selectAll" resultType="top.sjydzq.www.model.Product">
        SELECT * FROM Product
    </select>
    <select
        id="selectById"
        parameterType="Integer"
        resultType="top.sjydzq.www.model.Product"
    >
        SELECT * FROM Product WHERE id = #{id}
    </select>
    <select
        id="selectByName"
        parameterType="String"
        resultType="top.sjydzq.www.model.Product"
    >
        <bind name="fname" value="'%' + _parameter + '%'" />
        SELECT * FROM Product WHERE name LIKE #{fname}
    </select>
    <delete id="deleteById" parameterType="Integer">
        DELETE FROM Product WHERE id = #{id}
    </delete>
    <update id="updateProduct" parameterType="top.sjydzq.www.model.Product">
        UPDATE Product SET name = #{name}, price = #{price} WHERE id = #{id}
    </update>
    <insert
        id="insertProduct"
        parameterType="top.sjydzq.www.model.Product"
        keyProperty="id"
        useGeneratedKeys="true"
    >
        INSERT INTO Product(name, price) VALUES(#{name}, #{price})
    </insert>
</mapper>
