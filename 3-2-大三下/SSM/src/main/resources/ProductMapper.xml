<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>
<mapper namespace="ProductMapper">
    <select id="selectAll" resultType="top.sjydzq.www.model.Product">
        SELECT * FROM Product
    </select>
    <select
        id="selectById"
        parameterType="Integer"
        resultType="top.sjydzq.www.model.Product"
    >
        SELECT * FROM Product WHERE id = #{id}
    </select>
    <select
        id="selectByName"
        resultType="top.sjydzq.www.model.Product"
    >
        <bind name="fname" value="'%' + stringHelper + '%'" />
        SELECT * FROM Product WHERE name LIKE #{fname}
    </select>
</mapper>
